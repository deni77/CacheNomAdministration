<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Управление на номенклатури</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @Styles.Render("~/Content/kendo/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/kendo")

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <link href="~/Content/kendo/kendo.common-bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/kendo/kendo.bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/kendo/kendo.rtl.min.css" rel="stylesheet" />
    <link href="~/Content/kendo/kendo.default.min.css" rel="stylesheet" />
    <link href="~/Content/kendo/kendo.mobile.all.min.css" rel="stylesheet" />

    <script src="~/Scripts/kendo/jquery.min.js"></script>
    <script src="~/Scripts/kendo/kendo.all.min.js"></script>
    <script src="~/Scripts/kendo/kendo.timezones.min.js"></script>
    <script src="~/Scripts/kendo/kendo.aspnetmvc.min.js"></script>

    <script src="~/Scripts/kendo/kendo.angular.min.js"></script>
    <script src="~/Scripts/kendo/jszip.min.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:white;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Управление на номенклатури", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>


            <div class="demo-section k-content">
                <h4>Управление на номенклатури</h4>
                @(Html.Kendo()
                    .Menu()
                    .Name("main-nav")
                    .Items(items =>
                                {
                                    items.Add().Text("Номенклатура на тотализатори")
                                    .Items(innerItems =>
                                    {
                                        innerItems.Add().Text("Номенклатура на тотализатори").Action("Index", "Totalizer");
                                        innerItems.Add().Text("Добавяне на тотализатор").Action("Create", "Totalizer");
                                        innerItems.Add().Text("Списък на тотализатори по Id на контролна точка").Action("GetByControlPointID", "Totalizer");
                                    });
                                }
                           )
                )
                @*<ul id="horizontalMenu">
                    <li>
                        Номенклатура на тотализатори
                        <ul>
                            <li>@Html.ActionLink("Номенклатура на тотализатори", "Index", "Totalizer")</li>
                            <li>@Html.ActionLink("Добавяне на тотализатор", "Create", "Totalizer")</li>
                            <li>@Html.ActionLink("Списък на тотализатори по Id на контролна точка", "GetByControlPointID", "Totalizer")</li>
                        </ul>
                    </li>
                </ul>*@
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container body-content">
        <br />
        @RenderBody()
        <br />
        <footer>
            <p>&copy; @DateTime.Now.Year - Бизнес Мениджмънт Системс EOOД</p>
        </footer>
    </div>




    @RenderSection("scripts", required: false)
</body>
</html>
